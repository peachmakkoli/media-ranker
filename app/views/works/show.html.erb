<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>

  <section>
    <%= link_to "Back to media ranks", root_path, method: :get, class: "btn btn-primary" %>

    <%= link_to "Edit", edit_work_path(@work), method: :get, class: "btn btn-primary" %>

    <%= link_to "Upvote", work_upvote_path(@work), method: :post, class: "btn btn-primary" %>

    <%= link_to "Delete", work_path(@work), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this #{@work.category}: \"#{@work.title}\"?" } %>
  </section>

  <section class="media-votes__container">
    <h3 class="media-votes__header"><%= "#{pluralize(@work.votes.count, "vote".capitalize)} for this #{@work.category.capitalize}"%></h3>
    
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "media_votes_table_rows", collection: @work.votes, as: :vote %>
      </tbody>
    </table>

  </section>
</section>
